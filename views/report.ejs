<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte de Desembolsos por Bancoomeva</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        @media print {
            .no-print {
                display: none;
            }
            .table {
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">Reporte de Desembolsos por Bancoomeva</h4>
                            <div class="no-print">
                                <button onclick="window.print()" class="btn btn-light me-2">Imprimir</button>
                                <a href="/" class="btn btn-light">Nueva Consulta</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (data) { %>
                            <!-- Datos del Aliado -->
                            <div class="mb-4">
                                <h5 class="border-bottom pb-2">Datos del Aliado</h5>
                                <table class="table table-bordered table-sm">
                                    <tr>
                                        <td width="200"><strong>Nit</strong></td>
                                        <td><%= data.datosAliado.nit %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Nombre del convenio</strong></td>
                                        <td><%= data.datosAliado.nombreConvenio %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Destinatario del desembolso</strong></td>
                                        <td><%= data.datosAliado.destinatarioDesembolso %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Tipo cuenta</strong></td>
                                        <td><%= data.datosAliado.tipoCuenta %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>CuentaAliado</strong></td>
                                        <td><%= data.datosAliado.cuentaAliado %></td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Datos consultados -->
                            <div class="mb-4">
                                <h5 class="border-bottom pb-2">Datos consultados</h5>
                                <table class="table table-bordered table-sm">
                                    <tr>
                                        <td width="200"><strong>Fecha desde</strong></td>
                                        <td><%= data.datosConsultados.fechaDesde %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Fecha hasta</strong></td>
                                        <td><%= data.datosConsultados.fechaHasta %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Numero de documento</strong></td>
                                        <td><%= data.datosConsultados.numeroDocumento %></td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Detalle de desembolsos -->
                            <div>
                                <h5 class="border-bottom pb-2">Detalle de desembolsos por rango de fecha y/o documento</h5>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-sm">
                                        <thead class="table-primary">
                                            <tr>
                                                <th>Tipo de documento</th>
                                                <th>Numero de documento</th>
                                                <th>referencia 1</th>
                                                <th>referencia 2</th>
                                                <th>referencia 3</th>
                                                <th class="text-end">Monto a financiar</th>
                                                <th class="text-center">Plazo</th>
                                                <th>Numero de Operaci√≥n</th>
                                                <th>Fecha registro</th>
                                                <th>Fecha desembolso</th>
                                                <th class="text-end">tasa</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (data.desembolsos && data.desembolsos.length > 0) { %>
                                                <% data.desembolsos.forEach(item => { %>
                                                    <tr>
                                                        <td><%= item.tipoDocumento %></td>
                                                        <td><%= item.numeroDocumento %></td>
                                                        <td><%= item.referencia1 %></td>
                                                        <td><%= item.referencia2 %></td>
                                                        <td><%= item.referencia3 %></td>
                                                        <td class="text-end"><%= item.montoFinanciar %></td>
                                                        <td class="text-center"><%= item.plazo %></td>
                                                        <td><%= item.numOperacion %></td>
                                                        <td><%= item.fechaRegistro %></td>
                                                        <td><%= item.fechaDesembolso %></td>
                                                        <td class="text-end"><%= item.tasa %></td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="11" class="text-center">No se encontraron desembolsos para los criterios seleccionados</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="alert alert-danger">
                                Error al obtener los datos del reporte
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 